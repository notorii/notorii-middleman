<% form_tag "http://getsimpleform.com/messages?form_api_token=076badb1d1a72d5a7afafa7216b99913", method: "post" do %>

  <div class='fields'>
    <%= hidden_field_tag :redirect_to, value: "http://notorii.com/message_sent" %>
    <%= text_field_tag :name, placeholder: 'Name' %>
    <%= email_field_tag :email, placeholder: 'Email address' %>
    <%= telephone_field_tag :phone, placeholder: 'Phone number' %>
    <%= text_field_tag :timezone, placeholder: 'Timezone' %>
    <%= text_area_tag :message, placeholder: 'Please describe your project' %>
    <%= text_field_tag :budget, placeholder: 'Budget' %>
  </div>

  <div class='actions'>
    <%= submit_tag 'Submit' %>
  </div>

<% end %>

